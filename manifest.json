{
    "manifest_version": 2,
    "name": "Bappy Birfday Billiam",
    "version": "0.5",

    "description": "replaces the first letter of every word with the letter B",

    "icons": {
        "48": "logo.png"
    },

    "browser_action": {
        "default_icon": "logo.png",
        "default_title": "Bappy Birfday Billiam",
        "default_popup": "popup/popup.html",
        "browser_style": true
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],

    "permissions": ["storage"]
}